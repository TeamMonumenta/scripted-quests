{
  "title": "Animated Title",
  "description": "A fully custom, animated title. Supply a list of instructions to be executed in game.",
  "type":"object",
  "properties": {
    "type": {
      "type": "string",
      "default": "animated",
      "options": {
        "hidden": true
      }
    },
    "stay": {
      "propertyOrder": 1,
      "required": true,
      "title": "Stay",
      "description": "How long the title will stay (in ticks)",
      "type": "integer",
      "minimum": 1
    },
    "fadeIn": {
      "propertyOrder": 2,
      "required": false,
      "title": "Fade In",
      "description": "Fade in (in ticks)",
      "type": "integer"
    },
    "fadeOut": {
      "propertyOrder": 3,
      "required": false,
      "title": "Fade Out",
      "description": "Fade out (in ticks)",
      "type": "integer"
    },
    "instructions": {
      "title": "Animation Instructions",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/instructions"
      },
      "required": true
    }
  },
  "definitions": {
    "instructions": {
      "title": "Instructions",
      "extraProperties": false,
      "options": {
        "keep_oneof_values": false
      },
      "type": "object",
      "properties": {
        "target": {
          "title": "Target (subtitle or title)",
          "description": "The target for this instruction; what part of the title this will affect.",
          "type": "string",
          "enum": ["title", "subtitle"]
        }
      },
      "anyOf": [
        {
          "title": "Wait (in ms)",
          "type": "object",
          "properties": {
            "wait": {
              "title": "Wait (in ms)",
              "description": "Causes a delay of the provided amount of milliseconds before proceeding to the next instruction. TARGET does nothing here.",
              "type": "integer",
              "minValue": 1
            }
          }
        },
        {
          "title": "Append characters",
          "type": "object",
          "properties": {
            "app": {
              "title": "Append characters",
              "description": "Adds the provided characters on to the END of the target.",
              "type": "string",
              "minLength": 1
            }
          }
        },{
          "type": "object",
          "title": "Subtract off characters.",
          "properties": {
            "sub": {
              "title": "Subtract off characters.",
              "description": "Clears the specified amount of characters off the target. To clear the whole target, just use a massive number.",
              "type": "integer",
              "minValue": 1
            }
          }
        }
      ]
    }
  }


}
