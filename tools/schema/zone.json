{
    "type": "object",
    "defaultProperties": [
        "name",
        "properties",
        "location"
    ],
    "additionalProperties":false,
    "properties": {
        "name": {
            "required": true,
            "propertyOrder": 1,
            "title": "name",
            "description": "Zone name - so you'll know which zone you're looking at layer.",
            "type": "string"
        },
        "properties": {
            "propertyOrder": 2,
            "title": "properties",
            "description": "A list of properties for this zone, in order. Property groups are identified by the prefix '#'. Properties that are not desired from a group can be removed with the prefix '!', as if it was never there.",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "location": {
            "propertyOrder": 3,
            "$ref": "location.json"
        },
        "events": {
            "propertyOrder": 4,
            "required": false,
            "title": "Events",
            "additionalProperties": false,
            "properties": {
                "block_break": {
                    "propertyOrder": 1,
                    "type": "array",
                    "title": "Block Break",
                    "description": "Fired when a player breaks a block or an explosion destroys a block.",
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "blocks": {
                                "propertyOrder": 1,
                                "type": "array",
                                "title": "blocks",
                                "description": "Block types that trigger this event.",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "command": {
                                "propertyOrder": 2,
                                "title": "command",
                                "description": "Command to execute when this event fires. Will be run at the broken block, and as the player, entity, or block that broke the block.",
                                "type": "string"
                            }
                        }
                    }
                },
                "block_interact": {
                    "propertyOrder": 2,
                    "type": "array",
                    "title": "Block Interact",
                    "description": "Fired when a player left or right clicks a block.",
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "blocks": {
                                "propertyOrder": 1,
                                "type": "array",
                                "title": "blocks",
                                "description": "Block types that trigger this event.",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "type": {
                                "propertyOrder": 1,
                                "type": "string",
                                "title": "click type",
                                "description": "Either LEFT_CLICK, RIGHT_CLICK, or not set for either click type."
                            },
                            "command": {
                                "propertyOrder": 3,
                                "title": "command",
                                "description": "Command to execute when this event fires. Will be run at the broken block, and as the player, entity, or block that broke the block.",
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
